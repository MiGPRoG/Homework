#include <iostream>
#include <string>
using namespace std;

class Human
{
private:
    string name;
    string age;
    string color_hair;
    string weight;
    string height;
public:
    string Get()
    {
        return name, age, color_hair, weight, height;
    }
    void Set(string name, string age, string color_hair, string weight, string height)
    {
        this->name = name;
        this->age = age;
        this->color_hair = color_hair;
        this->weight = weight;
        this->height = height;
    }
    void Show()
    {
        cout << "Имя: " << name << '\n' << "Возраст: " << age << '\n' << "Цвет волос: " << color_hair << '\n' << "Вес: " << weight << '\n' << "Рост: " << height << '\n';
    }
};
 
class Student : public Human
{
public:
    string group;

    void ShowSt()
    {
        cout << "Студент" << '\n';
    }
};

class Professor : public Human
{
public:
    string subject;

    void ShowPr()
    {
        cout << "Профессор" << '\n';
    }
 
};

int main()
{
    setlocale(LC_ALL, "ru");
    Student st;
    st.Set("Павлов Федор", "18", "Чёрный", "85", "187");
    st.ShowSt();
    st.Show();
    Professor pr;
    pr.Set("Василий Иванович", "75", "Серый", "79", "190");
    pr.ShowPr();
    pr.Show();
  
    return 0;
}
